<%- content_tag(:thead) do -%>
  <%- content_tag(:tr) do -%>
    <%- directives.each do |entry| -%>
      <%= content_tag(:td, entry[1] ) %>
    <%- end -%>
  <%- end -%>
<%- end -%>
<%- content_tag(:div, :class=>"nobreak") do -%>
  <%- entries.each_with_index do |entry,i| -%>
    <%- content_tag(:tr,:class=>"#{(i%2 > 0) ? "Odd" : "Even"}") do -%>
      <%- directives.each do |meta| -%>
        <%- if meta[0].blank? -%>
          <%= content_tag(:td, '&nbsp;')%>
        <%- else -%>
          <%#= "entry #{entry.inspect} at #{meta[0]} labeled as #{meta[1]}" %>
          <%= content_tag(:td, meta.size>2 ? send(meta[2],entry[1][meta[0]]) : (entry[1][meta[0]] || '________' ) ) %>
        <%- end -%>
      <%- end -%>
    <%- end -%>
  <%- end -%>
<%- end  -%>



